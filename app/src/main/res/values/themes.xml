<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base app theme -->
    <style name="Theme.Rhythm" parent="android:Theme.DeviceDefault.NoActionBar">
        <!-- Android 12+ Splash Screen API -->
        <item name="android:windowSplashScreenBackground">#121212</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/rhythm_splash_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">10</item>
        <!-- Remove icon background to prevent circular cropping -->
        
        <!-- Prevent white flash on startup -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>