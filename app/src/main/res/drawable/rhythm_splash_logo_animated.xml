<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    
    <aapt:attr name="android:drawable">
        <vector
            android:width="200dp"
            android:height="200dp"
            android:viewportWidth="200"
            android:viewportHeight="200">
            
            <!-- Headphone Arc (Top) - Animated -->
            <path
                android:name="headphoneArc"
                android:pathData="M60,96C60,63 76,41 100,41C124,41 140,63 140,96"
                android:strokeColor="#7C4DFF"
                android:strokeWidth="7"
                android:strokeLineCap="round"
                android:fillColor="#00000000"
                android:trimPathStart="0"
                android:trimPathEnd="0" />
            
            <!-- Left Headphone Ear Cup -->
            <path
                android:name="leftEarCup"
                android:pathData="M52,86C40,86 35,93 35,103L35,129C35,139 40,146 52,146C64,146 69,139 69,129L69,103C69,93 64,86 52,86Z"
                android:fillAlpha="0">
                <aapt:attr name="android:fillColor">
                    <gradient
                        android:type="linear"
                        android:startX="35"
                        android:startY="86"
                        android:endX="69"
                        android:endY="146"
                        android:startColor="#7C4DFF"
                        android:endColor="#3700B3" />
                </aapt:attr>
            </path>
            
            <!-- Right Headphone Ear Cup -->
            <path
                android:name="rightEarCup"
                android:pathData="M148,86C136,86 131,93 131,103L131,129C131,139 136,146 148,146C160,146 165,139 165,129L165,103C165,93 160,86 148,86Z"
                android:fillAlpha="0">
                <aapt:attr name="android:fillColor">
                    <gradient
                        android:type="linear"
                        android:startX="131"
                        android:startY="86"
                        android:endX="165"
                        android:endY="146"
                        android:startColor="#7C4DFF"
                        android:endColor="#3700B3" />
                </aapt:attr>
            </path>
            
            <!-- Left Ear Cup Inner Detail -->
            <path
                android:name="leftEarCupInner"
                android:pathData="M52,95C45,95 42,99 42,103L42,129C42,133 45,137 52,137C59,137 62,133 62,129L62,103C62,99 59,95 52,95Z"
                android:fillColor="#FFFFFF"
                android:fillAlpha="0" />
            
            <!-- Right Ear Cup Inner Detail -->
            <path
                android:name="rightEarCupInner"
                android:pathData="M148,95C141,95 138,99 138,103L138,129C138,133 141,137 148,137C155,137 158,133 158,129L158,103C158,99 155,95 148,95Z"
                android:fillColor="#FFFFFF"
                android:fillAlpha="0" />
            
            <!-- Central Play Button Circle -->
            <path
                android:name="playButtonCircle"
                android:pathData="M100,111m-32,0a32,32 0,1 1,64 0a32,32 0,1 1,-64 0"
                android:fillAlpha="0">
                <aapt:attr name="android:fillColor">
                    <gradient
                        android:type="radial"
                        android:centerX="100"
                        android:centerY="111"
                        android:gradientRadius="32"
                        android:startColor="#7C4DFF"
                        android:centerColor="#6C3DFF"
                        android:endColor="#3700B3" />
                </aapt:attr>
            </path>
            
            <!-- Play Triangle -->
            <path
                android:name="playTriangle"
                android:pathData="M85,89C85,86 87,84 90,86L125,106C128,108 128,114 125,116L90,136C87,138 85,136 85,133Z"
                android:fillColor="#FFFFFF"
                android:fillAlpha="0" />
                
        </vector>
    </aapt:attr>
    
    <!-- Headphone arc drawing animation -->
    <target android:name="headphoneArc">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="trimPathEnd"
                    android:duration="1000"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/decelerate_interpolator"
                    android:startOffset="500" />
            </set>
        </aapt:attr>
    </target>
    
    <!-- Left ear cup fade in -->
    <target android:name="leftEarCup">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="600"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:anim/decelerate_interpolator"
                android:startOffset="800" />
        </aapt:attr>
    </target>
    
    <!-- Right ear cup fade in -->
    <target android:name="rightEarCup">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="600"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:anim/decelerate_interpolator"
                android:startOffset="900" />
        </aapt:attr>
    </target>
    
    <!-- Left ear cup inner detail -->
    <target android:name="leftEarCupInner">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="400"
                android:valueFrom="0"
                android:valueTo="0.6"
                android:valueType="floatType"
                android:interpolator="@android:anim/decelerate_interpolator"
                android:startOffset="1000" />
        </aapt:attr>
    </target>
    
    <!-- Right ear cup inner detail -->
    <target android:name="rightEarCupInner">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="400"
                android:valueFrom="0"
                android:valueTo="0.6"
                android:valueType="floatType"
                android:interpolator="@android:anim/decelerate_interpolator"
                android:startOffset="1100" />
        </aapt:attr>
    </target>
    
    <!-- Play button circle scale and fade -->
    <target android:name="playButtonCircle">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="fillAlpha"
                    android:duration="800"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"
                    android:startOffset="1200" />
            </set>
        </aapt:attr>
    </target>
    
    <!-- Play triangle final reveal -->
    <target android:name="playTriangle">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="400"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:anim/bounce_interpolator"
                android:startOffset="1600" />
        </aapt:attr>
    </target>
    
</animated-vector>
